<?xml version="1.0"?>
<ruleset name="WirecardOxidRuleset">
  <description>Wirecard OXID extension</description>

  <!-- Load external standards -->
  <config name="installed_paths" value="vendor/oxid-esales/coding-standards,vendor/escapestudios/symfony2-coding-standard"/>

  <!-- Exclude patterns -->
  <exclude-pattern>.bin</exclude-pattern>
  <exclude-pattern>.bundle</exclude-pattern>
  <exclude-pattern>ops</exclude-pattern>
  <exclude-pattern>out</exclude-pattern>
  <exclude-pattern>phpcs</exclude-pattern>
  <exclude-pattern>phpmd</exclude-pattern>
  <exclude-pattern>Tests</exclude-pattern>
  <exclude-pattern>translations</exclude-pattern>
  <exclude-pattern>vendor</exclude-pattern>
  <exclude-pattern>views</exclude-pattern>

  <!-- Inherit OXID's coding standard -->
  <rule ref="Oxid"/>

  <!-- Add sniffs related to OXID's "Software quality" guidelines -->
  <rule ref="Generic.Metrics.CyclomaticComplexity">
    <properties>
      <property name="complexity" value="5"/>
      <property name="absoluteComplexity" value="5"/>
    </properties>
  </rule>

  <!-- Add custom sniffs -->
  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="120"/>
      <property name="absoluteLineLimit" value="120"/>
    </properties>
  </rule>
  <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter"/>
  <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
  <rule ref="Symfony2.Arrays.MultiLineArrayComma"/>

  <!-- Add custom sniffs -->
  <rule ref="phpcs/Sniffs/Functions/FunctionNameUnderscoreSniff.php"/>
</ruleset>
