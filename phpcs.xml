<?xml version="1.0"?>
<ruleset name="WirecardOxidRuleset">
  <description>Wirecard OXID extension</description>

  <!-- Ignore patterns -->
  <exclude-pattern>*/Application/views/*</exclude-pattern>
  <exclude-pattern>*/oxfunctions.php*</exclude-pattern>
  <exclude-pattern>*/Core/Smarty/*</exclude-pattern>
  <exclude-pattern>*/Core/tcpdf/*</exclude-pattern>
  <exclude-pattern>*/Core/adodblite/*</exclude-pattern>
  <exclude-pattern>*/out/*</exclude-pattern>
  <exclude-pattern>*/Setup/tpl/*</exclude-pattern>
  <exclude-pattern>*/tmp[^/]*/*</exclude-pattern>
  <exclude-pattern>/config.inc.php</exclude-pattern>
  <exclude-pattern>/vendor/</exclude-pattern>
  <exclude-pattern>/Tests/</exclude-pattern>
  <exclude-pattern>/tests/</exclude-pattern>
  <exclude-pattern>/translations/</exclude-pattern>
  <exclude-pattern>/views/</exclude-pattern>
  <exclude-pattern>/phpmd/</exclude-pattern>
  <exclude-pattern>.phpstorm.meta.php/*</exclude-pattern>
  <exclude-pattern>*/de/</exclude-pattern>
  <exclude-pattern>*/en/</exclude-pattern>
  <exclude-pattern>metadata.php</exclude-pattern>



  <!-- including the OXID ruleset here is only for interoperability with the "phpcs" extension for Visual Code
         otherwise there would be no inline error messages in the IDE -->
  <rule ref="vendor/oxid-esales/coding-standards/Oxid/ruleset.xml">
  </rule>

  <rule ref="WirecardOxidRuleset/Sniffs/Functions/FunctionNameUnderscoreSniff.php">
  </rule>

  <!-- Maximum number of characters on one line -->
  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="120"/>
      <property name="absoluteLineLimit" value="120"/>
    </properties>
  </rule>
</ruleset>
